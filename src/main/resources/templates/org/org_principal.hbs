{{#partial "contenido"}}
    <div class = "d-flex justify-content-center mt-4">
        <h1>¿Qué desea hacer?</h1>
    </div>
      <div class = "d-flex justify-content-center">
        <hr style="width:50%; ">
      </div>
      <div class="container py-5">
        <div class="row">
          <div class="col d-flex flex-column justify-content-center ">
            <div class="circle-logo d-flex justify-content-center">
              <img src="/images/undraw_selecting_team_re_ndkb.svg" class="square" width = "208" height="208" alt="Icono de solicitar alta en organización">
            </div>
            <div class="mt-4 d-flex justify-content-center">
              <a href="solicitudes" class=" link-circle">Administrar solicitudes de miembros</a>
            </div>
          </div>
          <div class="col d-flex flex-column justify-content-center ">
            <div class="circle-logo d-flex justify-content-center">
              <img src="/images/undraw_selection_re_ycpo.svg" class="square" width = "208" height="208" alt="Icono de cargar trayectos">
            </div>
            <div class="mt-4 d-flex justify-content-center">
              <a href="alta_area" class=" link-circle" >Dar de alta sector</a>
            </div>
          </div>
            <div class="col d-flex flex-column justify-content-center ">
                <div class="circle-logo d-flex justify-content-center">
                    <img src="/images/undraw_reportes_org.svg" class="square" width = "208" height="208" alt="Icono de cargar trayectos">
                </div>
                <div class="mt-4 d-flex justify-content-center">
                    <a href="/organizacion/reportes" class=" link-circle" >Ver reportes</a>
                </div>
            </div>
            <div class="col d-flex flex-column justify-content-center ">
                <div class="circle-logo d-flex justify-content-center">
                    <img src="/images/undraw_mediciones.svg" class="square" width = "208" height="208" alt="Icono de cargar trayectos">
                </div>
                <div class="mt-4 d-flex justify-content-center">
                    <a href="/organizacion/cargar_mediciones" class=" link-circle" >Cargar Mediciones</a>
                </div>
            </div>
        </div>
      </div>

    {{#if importacion-exitosa}}

        {{#partial "mensaje"}}
            ¡Actividades importadas correctamente!
        {{/partial}}
        {{> shared/mensaje_alerta.hbs }}

    {{/if}}
    {{#if importacion-fallida}}

        {{#partial "mensaje"}}
            ¡Error importando actividades!
        {{/partial}}
        {{> shared/mensaje_alerta.hbs }}

    {{/if}}

{{/partial}}
