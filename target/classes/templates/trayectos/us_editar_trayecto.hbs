{{#partial "contenido"}}

<section class="container">
    <div  class="mt-3">
        <a href = "/user/trayectos">
            <button class = "btn btn-secondary">Volver a "Mis trayectos"</button>
        </a>
    </div>
<div class = "my-3">
  <h1>Editar trayecto</h1>
</div>
<div class = "my-2">
      <label>
          Organización a la que se dirige o de la que regresa: <strong>{{organizacion.nombre}}</strong>
      </label>
</div>
  <div>
      <div class = "my-2">
          <label class = "font-weight-bold" for="exampleInputEmail1" style="font-size: 110%; font-weight: bold;">Agregar nuevo tramo</label>
      </div>
      <a type="button" href="/user/trayectos/tramo/compartido/unirse/{{idTrayecto}}" class="btn btn-secondary">Unirse a tramo compartido</a>
      <a type="button" href="/user/trayectos/tramo/publico/crear/{{idTrayecto}}" class="btn btn-secondary">Tramo público</a>
      <a type="button" href="/user/trayectos/tramo/limpio/crear/{{idTrayecto}}" class="btn btn-secondary">Tramo limpio</a>
      <a type="button" href="/user/trayectos/tramo/particular/crear/{{idTrayecto}}" class="btn btn-secondary">Tramo particular</a>
      <a type="button" href="/user/trayectos/tramo/contratado/crear/{{idTrayecto}}" class="btn btn-secondary">Tramo contratado</a>
  </div>

  <div class="container mt-4">
      <h2>Tramos</h2>
        <div class ="row">
            {{#each tramos}}
                <div class="col-sm-3">
                <div class="card text-white bg-dark mb-3" style="max-width: 16rem;">
                    <div class="card-header">
                        <h5 class="card-title">Tramo {{incrementar @index}}</h5>
                    </div>
                    <div class="card-body" style="margin-top:-20px">
                        <p class="card-text" style="font-weight: bold;">Origen:</p>
                        <p class="card-text">{{puntoInicio}}</p>
                        <p class="card-text" style="font-weight: bold;">Destino:</p>
                        <p class="card-text">{{puntoFin}}</p>
                        <p class="card-text" style="font-weight: bold;">Tipo de tramo:</p>
                        <p class="card-text">{{tipo}}</p>
                    </div>
                    <div class = "row d-flex mb-4">
                        <div class="col d-flex justify-content-center">
                            <form action="/user/trayectos/tramo/eliminar/{{../idTrayecto}}/{{id}}" method = "POST">
                                <button type="submit" class = "btn btn-light btn-rounded">
                                    <img src="/images/bin.png" width="30" height="30" alt="eliminar tramo {{@index}}"/>
                                </button>
                            </form>
                        </div>
                        <div class="col d-flex justify-content-center">
                            <form action="/user/trayectos/tramo/editar/{{../idTrayecto}}/{{id}}" method = "GET">
                                <button type="submit" class = "btn btn-light btn-rounded">
                                    <img src="/images/pencil.png" width="30" height="30" alt="editar tramo {{@index}}"/>
                                </button>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
            {{/each}}
        </div>
</div>

</section>
{{/partial}}
{{> ../public/shared/user_base.hbs }}