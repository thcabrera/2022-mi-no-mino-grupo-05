{{#partial "contenido"}}

<section class="container">
  <form action="/user/trayectos/agregar" method="POST">
    <div class="form my-2">
      <h1>Nuevo trayecto</h1>
    </div>
    <div class="form-group">
      <label class = "font-weight-bold pt-2" for="idOrg">Organización a la que se dirige o de la que regresa</label>
      <select class="form-control" id = "idOrg" name="id_org" required>
        <option value="" disabled selected>Seleccione Organización...</option>
          {{#each organizaciones}}
              <option value="{{id}}">{{nombre}}</option>
          {{/each}}
      </select>
      <small id="org-help" class="form-text text-muted">Si va de una a otra, seleccionar la de destino</small>
    </div>
      <div class="m-4 d-flex justify-content-center">
          <button type="submit" class="btn btn-success" style="margin-bottom:30px">Confirmar trayecto</button>
      </div>
  </form>
</section>
{{/partial}}
{{> ../public/shared/user_base.hbs }}